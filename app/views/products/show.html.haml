.row-fluid
  .span12
    %ul.breadcrumb
      %li
        / /row
.row-fluid
  = image_tag @product.image.url
  .span4
    %ul.thumbnails
      %li.span12
        .caption
          %h2= @product.name.capitalize
          %h3= "$#{@product.price}"
          %br
          %h4= @product.description
      
      - if @product.retired?
        This product is retired
      - else
        = form_tag add_item_cart_path do
          = hidden_field_tag "product_id", @product.id
          = submit_tag "Add to Cart"
        = form_tag two_click_checkout_path do
          = hidden_field_tag "product_id", @product.id
          = submit_tag "Two Click Checkout", :onclick => "alert('Place this order for #{@product.name}?')"
%br
