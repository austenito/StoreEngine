= form_for current_user do |f|
  -if current_user.errors.any?
    .error_messages
      %p Form is invalid
      %ul
        - for message in current_user.errors.full_messages
          %li
            = message
  = f.label :first_name
  = f.text_field :first_name
  %br
  = f.label :last_name
  = f.text_field :last_name
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :display_name
  = f.text_field :display_name
  %br
  = f.label :credit_card_number
  = f.text_field :credit_card_number
  %br
  = f.label :address_line1
  = f.text_field :address_line1
  %br
  = f.label :city
  = f.text_field :city
  %br
  = f.label :state
  = f.text_field :state
  %br
  = f.label :zipcode
  = f.text_field :zipcode
  %br
  = f.submit "Submit"
