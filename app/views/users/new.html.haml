= form_for @user do |f|
  -if @user.errors.any?
    .error_messages
      %p Form is invalid
      %ul
        - for message in @user.errors.full_messages
          %li message
  = f.label :first_name
  = f.text_field :first_name
  %br
  = f.label :last_name
  = f.text_field :last_name
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :password
  = f.password_field :password
  %br
  = f.label :password_confirmation, "Confirm password"
  = f.password_field :password_confirmation
  %br
  = f.submit "Submit"
