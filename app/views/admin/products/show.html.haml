%table
  %tr
    %th Product Name
    %th Product Description
    %th Product Price
  %tr
    %td
      = @product.name
    %td
      = @product.price
    %td
      = @product.description

= link_to "Edit", edit_admin_product_path(@product.id)

- if @product.retired?
  Retired
- else
  = button_to "Retire", { action: "retire", id: @product.id }

