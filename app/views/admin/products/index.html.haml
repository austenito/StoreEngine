%table
  %th Product Image
  %th Product Name
  %th Product Description 
  %th Product Price
  %th Product Status
  %th Edit Product
  - @products.each do |product|
    %tr
      %td
        = image_tag product.image.url(:thumb)
      %td
        = product.name
      %td
        = product.description
      %td
        = product.price
      %td
        - if product.retired?
          Retired
        - else
          = button_to "Retire", { action: "retire", id: product.id }
      %td
        = link_to "Edit Product", admin_product_path(product), class: 'product', id: dom_id(product)

