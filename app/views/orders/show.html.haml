%table 
  %th Order ID
  %th Order Status
  %th Date Order Placed
  %th Total 
  %th Timestamp of Status Changed
  %tr
    %td
      = @order.id
    %td
      = @order.status
    %td
      = @order.created_at
    %td
      = @order.total 
    - if @order.status == "shipped" || @order.status == "cancelled"
      %td
        = @order.updated_at

