  %input{type: 'text', name: 'creditCartNumber', value: 'Credit Cart Number' }
  %br
  %input{ type: 'text', name: 'expirationDate', value: 'Expiration Date'}
  %br
  %input{ type: 'text', name: 'addressLine1', value: 'Address 1' }
  %br
  %input{ type: 'text', name: 'addressLine2', value: 'Address 2' }
  %br
  %input{ type: 'text', name: 'city', value: 'City' }
  %br
  %input{ type: 'text', name: 'state', value: 'State' }
  %br
  %input{ type: 'text', name: 'zipcode', value: 'Zipcode' }
