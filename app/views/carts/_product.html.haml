%tr
  %td
    = product.name
  %td
    = form_tag update_quantity_cart_path do
      = hidden_field_tag 'product_id', product.id
      = text_field_tag 'quantity', product.quantity
      = submit_tag 'Update'
  %td
    = product.price
  %td
    = product.subtotal
  %td
    = form_tag delete_product_cart_path do
      = hidden_field_tag 'product_id', product.id
      = submit_tag 'Remove from cart'
